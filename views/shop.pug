extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    if prods.length > 0
        .grid
            each product in prods
                article.card.product-item
                    header.card__header
                        h1.product__title #{product.title}
                        .card__image
                            img(src="https://markmanson.net/wp-content/uploads/2019/02/eif-3d-fits-shadow.jpg", alt="A Book")
            
                    .card__content
                        h2.product__price $19.99
                        .product__description A very interesting book about so many events
                    .card__actions
                        button.btn Add to Cart
    else 
        h1 No products